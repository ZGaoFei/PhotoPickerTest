<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zgfei.photopickertest.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/bt_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="photo picker"/>

    <Button
        android:id="@+id/bt_picker1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="photo picker1"/>

    <Button
        android:id="@+id/bt_picker2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="photo picker2"/>

    <Button
        android:id="@+id/bt_picker3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="skip to next"/>

    <Button
        android:id="@+id/bt_picker4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="skip to zhihu"/>

    <TextView
        android:id="@+id/tv_image_url"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
